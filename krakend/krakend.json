{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "name": "KrakenD - API Gateway",
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/fake-api/{json}",
      "backend": [
        {
          "url_pattern": "/fake-api/{json}",
          "host": [
            "fake-api:4000"
          ]
        }
      ]
    },
    {
      "endpoint": "/auth/register",
      "output_encoding": "no-op",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/register",
          "host": [
            "auth:3000"
          ],
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/login",
          "host": [
            "auth:3000"
          ],
          "method": "POST",
          "extra_config": {
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "jwk_local_path": "/etc/krakend/jwk.json",
          "keys_to_sign": [
            "access_token",
            "refresh_token"
          ],
          "kid": "sim2",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/auth/verify",
      "input_headers": [
        "Authorization"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/verify",
          "host": [
            "auth:3000"
          ]
        }
      ]
    },
    {
      "endpoint": "/addition/{num1}/{num2}",
      "backend": [
        {
          "url_pattern": "/add/{num1}/{num2}",
          "host": [
            "addition:3001"
          ]
        }
      ]
    },
    {
      "endpoint": "/subtraction/{num1}/{num2}",
      "backend": [
        {
          "url_pattern": "/subtract/{num1}/{num2}",
          "host": [
            "subtraction:3002"
          ]
        }
      ]
    },
    {
      "endpoint": "/multiplication/{num1}/{num2}",
      "backend": [
        {
          "url_pattern": "/multiply/{num1}/{num2}",
          "host": [
            "multiplication:3003"
          ]
        }
      ]
    },
    {
      "endpoint": "/division/{num1}/{num2}",
      "backend": [
        {
          "url_pattern": "/divide/{num1}/{num2}",
          "host": [
            "division:3004"
          ]
        }
      ]
    },
    {
      "endpoint": "/functions/greeting",
      "backend": [
        {
          "url_pattern": "/greeting",
          "host": [
            "functions:3005"
          ]
        }
      ]
    },
    {
      "endpoint": "/functions/percentage/{num}/{percentage}",
      "backend": [
        {
          "url_pattern": "/percentage/{num}/{percentage}",
          "host": [
            "functions:3005"
          ]
        }
      ]
    },
    {
      "endpoint": "/functions/square-root/{num}",
      "backend": [
        {
          "url_pattern": "/sqrt/{num}",
          "host": [
            "functions:3005"
          ]
        }
      ]
    },
    {
      "endpoint": "/functions/log/{num}",
      "backend": [
        {
          "url_pattern": "/log/{num}",
          "host": [
            "functions:3005"
          ]
        }
      ]
    }
  ]
}